<header class="main-header">
	<h1 class="app-name"><img class="app-logo" alt="Panorama" src="/img/panorama_logo_b.svg"></h1>
	<% if (everyauth.loggedIn) { %>
	<aside class="current-user">
		<div class="current-user-name">Hello, <strong><%= user.login %></strong></div>
		<div class="current-user-avatar"><a class="tubular" href="<%= user.html_url %>"><img class="user-avatar" src="<%= user.avatar_url %>"></a></div>
	</aside>
	<% } else { %>
	<aside class="current-user">
		<div class="current-user-login"><a href="/auth/github">Login via GitHub</a> to view the activity that matters to you</div>
	</aside>
	<% } %>
	<aside class="current-view">
		<div class="theme-switcher"><span data-bind="click: switchTheme" class="octicon octicon-gear"></span></div>
		<div class="current-view-type">
			Showing
			<input class="input input-repo-name" data-bind="value: organizationInput" placeholder="Enter repository name"/> as <span class="input" data-bind="click: switchView, text: view">lanes</span>
		</div>
	</aside>
</header>

